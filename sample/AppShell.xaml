<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    FlyoutBehavior="Locked"
    Title="QrCodes.SampleApp"
    x:Class="QrCodes.SampleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:local="clr-namespace:QrCodes.SampleApp"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ShellContent
        ContentTemplate="{DataTemplate local:StartPage}"
        Route="StartPage"
        Title="Start" />

    <ShellContent
        ContentTemplate="{DataTemplate local:DynamicExamplePage}"
        Route="DynamicExamplePage"
        Title="Dynamic Example" />

    <ShellContent
        ContentTemplate="{DataTemplate local:StaticExamplesPage}"
        Route="StaticExamplesPage"
        Title="Static Examples" />

</Shell>
